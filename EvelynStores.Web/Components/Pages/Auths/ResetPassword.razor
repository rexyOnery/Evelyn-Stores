@page "/reset-password"
@layout AuthLayout
@rendermode InteractiveServer
@using EvelynStores.Core.DTOs
@using EvelynStores.Core.Services
@inject IEvelynPhilApiHttpClient ApiClient
@inject NavigationManager Navigation

<PageTitle>Reset Password</PageTitle>

<EditForm Model="ResetModel" OnValidSubmit="HandleResetPassword" FormName="resetPasswordForm">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-body p-5">
            <div class="login-userheading">
                <h3>Reset password?</h3>
                <h4>Enter New Password & Confirm Password to get inside</h4>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <div class="mb-3">
                <label class="form-label">New Password <span class="text-danger"> *</span></label>
                <div class="pass-group">
                    <InputText type="password" @bind-Value="ResetModel.NewPassword" class="pass-inputs form-control" />
                    <span class="ti toggle-passwords ti-eye-off text-gray-9"></span>
                </div>
                <ValidationMessage For="@(() => ResetModel.NewPassword)" />
            </div>
            <div class="mb-3">
                <label class="form-label">Confirm Password <span class="text-danger"> *</span></label>
                <div class="pass-group">
                    <InputText type="password" @bind-Value="ResetModel.ConfirmPassword" class="pass-inputa form-control" />
                    <span class="ti toggle-passworda ti-eye-off text-gray-9"></span>
                </div>
                <ValidationMessage For="@(() => ResetModel.ConfirmPassword)" />
            </div>
            <div class="form-login">
                <button type="submit" class="btn btn-primary w-100" disabled="@isSubmitting">
                    @(isSubmitting ? "Resetting..." : "Change Password")
                </button>
            </div>
            <div class="signinform text-center mb-0">
                <h4>Return to <a href="/" class="hover-a"> login </a></h4>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [SupplyParameterFromQuery]
    private string? Email { get; set; }

    [SupplyParameterFromQuery]
    private string? Token { get; set; }

    [SupplyParameterFromForm]
    private ResetPasswordDto ResetModel { get; set; } = new();

    private string? errorMessage;
    private bool isSubmitting;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Email) || string.IsNullOrEmpty(Token))
        {
            Navigation.NavigateTo("/forgot-password");
            return;
        }

        ResetModel.Email = Email;
        ResetModel.ResetToken = Token;
    }

    private async Task HandleResetPassword()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            // Ensure hidden fields are populated
            ResetModel.Email = Email!;
            ResetModel.ResetToken = Token!;

            var response = await ApiClient.PostAsync("/api/auth/reset-password", ResetModel);

            if (response.Success)
            {
                Navigation.NavigateTo("/success");
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception)
        {
            errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
