@page "/forgot-password"
@layout AuthLayout
@rendermode InteractiveServer
@using EvelynStores.Core.DTOs
@using EvelynStores.Core.Services
@inject IEvelynPhilApiHttpClient ApiClient
@inject NavigationManager Navigation

<PageTitle>Forgot Password</PageTitle>

<EditForm Model="ForgotModel" OnValidSubmit="HandleForgotPassword" FormName="forgotPasswordForm">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-body p-5">
            <div class="login-userheading">
                <h3>Forgot password?</h3>
                <h4>If you forgot your password, well, then we'll email you instructions to reset your password.</h4>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <div class="mb-3">
                <label class="form-label">Email <span class="text-danger"> *</span></label>
                <div class="input-group">
                    <InputText @bind-Value="ForgotModel.Email" class="form-control border-end-0" />
                    <span class="input-group-text border-start-0">
                        <i class="ti ti-mail"></i>
                    </span>
                </div>
                <ValidationMessage For="@(() => ForgotModel.Email)" />
            </div>
            <div class="form-login">
                <button type="submit" class="btn btn-primary w-100" disabled="@isSubmitting">
                    @(isSubmitting ? "Sending..." : "Send OTP")
                </button>
            </div>
            <div class="signinform text-center">
                <h4>Return to<a href="/" class="hover-a"> login </a></h4>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private ForgotPasswordDto ForgotModel { get; set; } = new();

    private string? errorMessage;
    private bool isSubmitting;

    private async Task HandleForgotPassword()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            var response = await ApiClient.PostAsync("/api/auth/forgot-password", ForgotModel);

            if (response.Success)
            {
                var encodedEmail = Uri.EscapeDataString(ForgotModel.Email);
                Navigation.NavigateTo($"/email-verification?email={encodedEmail}");
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception)
        {
            errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
