<DeleteModal EntityId="SelectedCategoryForDelete" Entity="Category" OnConfirm="HandleDeleteConfirmed" />

@code {
    private List<CategoryDto> CategoryList { get; set; } = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    private CategoryDto AddModel { get; set; } = new CategoryDto();
    private CategoryDto EditModel { get; set; } = new CategoryDto();
    private CategoryDto? SelectedCategoryForEdit { get; set; }
    private Guid? SelectedCategoryForDelete { get; set; }

    // Image upload / preview fields (replicated from AddProduct)
    // image upload state (match AdminBrand implementation)
    private IBrowserFile? AddImageFile;
    private IBrowserFile? EditImageFile;
    private string? AddPreviewUrl;
    private string? EditPreviewUrl;
    private string PrimaryImage { get; set; } = string.Empty; // stored URL returned from server
    private string PrimaryPreviewUrl { get; set; } = string.Empty; // data url for preview
    private const long MaxFileBytes = 5 * 1024 * 1024; // 5 MB

    private string searchTerm = string.Empty;
    private string statusFilter = "All";

    private IEnumerable<CategoryDto> FilteredCategories =>
        CategoryList.Where(c =>
            (string.IsNullOrWhiteSpace(searchTerm) || (c.Name?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) == true) || (c.Slug?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) == true))
            && (statusFilter == "All" || (statusFilter == "Active" && c.IsActive) || (statusFilter == "Inactive" && !c.IsActive))
        ).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private void SetStatusFilter(string s)
    {
        statusFilter = s;
    }

    private async Task LoadCategories()
    {
        errorMessage = null;
        isLoading = true;
        try
        {
            var resp = await ApiClient.GetAsync<List<CategoryDto>>("/api/categories");
            if (resp != null && resp.Success)
            {
                CategoryList = resp.Data ?? new List<CategoryDto>();
            }
            else
            {
                CategoryList = new List<CategoryDto>();
                errorMessage = resp?.Message ?? "Failed to load categories from server.";
                ShowMessage(errorMessage, isSuccess: false);
            }
        }
        catch (Exception)
        {
            errorMessage = "Failed to load categories from server.";
            CategoryList = new List<CategoryDto>();
            ShowMessage(errorMessage, isSuccess: false);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OnAddNameChanged(ChangeEventArgs e)
    {
        AddModel.Slug = GenerateSlug(AddModel.Name);
        StateHasChanged();
    }

    private void OnEditNameChanged(ChangeEventArgs e)
    {
        EditModel.Slug = GenerateSlug(EditModel.Name);
        StateHasChanged();
    }

    private string GenerateSlug(string? value)
    {
        if (string.IsNullOrWhiteSpace(value)) return string.Empty;
        var slug = System.Text.RegularExpressions.Regex.Replace(value.Trim().ToLowerInvariant(), "[^a-z0-9]+", "-");
        slug = slug.Trim('-');
        return slug;
    }

    private async Task HandleAddInvalidSubmit(EditContext context)
    {
        ShowMessage("Please correct validation errors and try again.", isSuccess: false);
    }

    private async Task HandleEditInvalidSubmit(EditContext context)
    {
        ShowMessage("Please correct validation errors and try again.", isSuccess: false);
    }

    private async Task HandleAddSubmit()
    {
        if (CategoryList.Any(c => string.Equals(c.Name?.Trim(), AddModel.Name?.Trim(), StringComparison.OrdinalIgnoreCase)))
        {
            ShowMessage("A category with this name already exists.", isSuccess: false);
            return;
        }

        AddModel.CreatedAt = DateTime.UtcNow;
        AddModel.Slug = GenerateSlug(AddModel.Name);
        CategoryList.Insert(0, AddModel);
        StateHasChanged();

        try
        {
            // if an image file was selected, upload it first and set AddModel.ImageUrl to returned path
            // use base64 image payload just like AddProduct: PrimaryImage carries data URL
            if (!string.IsNullOrEmpty(PrimaryImage))
            {
                AddModel.ImageUrl = PrimaryImage;
            }

            var resp = await ApiClient.PostAsync<CategoryDto>("/api/categories", AddModel);
            if (resp != null && resp.Success)
            {
                var created = resp.Data ?? AddModel;
                var idx = CategoryList.FindIndex(c => c.Id == AddModel.Id || (c.Name == AddModel.Name && c.Slug == AddModel.Slug && c.CreatedAt == AddModel.CreatedAt));
                if (idx >= 0) CategoryList[idx] = created;
                ShowMessage("Category added", isSuccess: true);
            }
            else
            {
                CategoryList.RemoveAll(c => c.Name == AddModel.Name && c.Slug == AddModel.Slug && c.CreatedAt == AddModel.CreatedAt);
                errorMessage = resp?.Message ?? "Failed to create category.";
                ShowMessage(errorMessage, isSuccess: false);
            }
        }
        catch
        {
            CategoryList.RemoveAll(c => c.Name == AddModel.Name && c.Slug == AddModel.Slug && c.CreatedAt == AddModel.CreatedAt);
            errorMessage = "Failed to create category.";
            ShowMessage(errorMessage, isSuccess: false);
        }
        finally
        {
            try { await JS.InvokeVoidAsync("eval", "$('#add-category').modal('hide');"); } catch { }
            AddModel = new CategoryDto();
            StateHasChanged();
        }
    }

    private async Task OpenEdit(CategoryDto category)
    {
        SelectedCategoryForEdit = category;
        EditModel = new CategoryDto
        {
            Id = category.Id,
            Name = category.Name,
            Slug = category.Slug,
            IsActive = category.IsActive,
            CreatedAt = category.CreatedAt
        };
        try { await JS.InvokeVoidAsync("eval", "$('#edit-category').modal('show');"); } catch { }
    }

    private async Task HandleEditSubmit()
    {
        if (EditModel == null) return;
        if (CategoryList.Any(c => c.Id != EditModel.Id && string.Equals(c.Name?.Trim(), EditModel.Name?.Trim(), StringComparison.OrdinalIgnoreCase)))
        {
            ShowMessage("A category with this name already exists.", isSuccess: false);
            return;
        }

        try
        {
             // if an image file was selected, upload it first and set AddModel.ImageUrl to returned path
            // use base64 image payload just like AddProduct: PrimaryImage carries data URL
            if (!string.IsNullOrEmpty(PrimaryImage))
            {
                EditModel.ImageUrl = PrimaryImage;
            }

            EditModel.Slug = GenerateSlug(EditModel.Name);
            var resp = await ApiClient.PutAsync<CategoryDto>($"/api/categories/{EditModel.Id}", EditModel);
            if (resp != null && resp.Success)
            {
                var idx = CategoryList.FindIndex(c => c.Id == EditModel.Id);
                if (idx >= 0) CategoryList[idx] = resp.Data ?? EditModel;
                ShowMessage("Category updated", isSuccess: true);
            }
            else
            {
                errorMessage = resp?.Message ?? "Failed to update category.";
                ShowMessage(errorMessage, isSuccess: false);
            }
        }
        catch
        {
            errorMessage = "Failed to update category.";
            ShowMessage(errorMessage, isSuccess: false);
        }
        finally
        {
            try { await JS.InvokeVoidAsync("eval", "$('#edit-category').modal('hide');"); } catch { }
        }
    }

    private async Task OpenDelete(Guid id)
    {
        SelectedCategoryForDelete = id;
        try { await JS.InvokeVoidAsync("eval", "$('#delete-modal').modal('show');"); } catch { }
    }

    private async Task HandleDeleteConfirmed(Guid id)
    {
        try
        {
            var resp = await ApiClient.DeleteAsync($"/api/categories/{id}");
            if (resp != null && resp.Success)
            {
                CategoryList.RemoveAll(c => c.Id == id);
                ShowMessage("Category deleted", isSuccess: true);
            }
            else
            {
                errorMessage = resp?.Message ?? "Failed to delete category.";
                ShowMessage(errorMessage, isSuccess: false);
            }
        }
        catch
        {
            errorMessage = "Failed to delete category.";
            ShowMessage(errorMessage, isSuccess: false);
        }
    }

    private void ClearMessages()
    {
        successMessage = null;
        errorMessage = null;
    }

    private async void ShowMessage(string? message, bool isSuccess)
    {
        if (isSuccess) successMessage = message;
        else errorMessage = message;
        StateHasChanged();

        await Task.Delay(4000);
        ClearMessages();
        StateHasChanged();
    }

    // Helper for file input via InputFile component if used in future
    private async Task OnInputFileChanged(InputFileChangeEventArgs e)
    {
        var file = e.File;
        AddImageFile = file;
        await UploadAndPreview(file);
    }

    private async Task UploadAndPreview(IBrowserFile file)
    {
        // keep for compatibility but not used; prefer UploadImageAsync flow
        if (file == null) return;
        using var ms = new MemoryStream();
        await file.OpenReadStream(MaxFileBytes).CopyToAsync(ms);
        var bytes = ms.ToArray();
        var base64 = Convert.ToBase64String(bytes);
        PrimaryPreviewUrl = $"data:{file.ContentType};base64,{base64}";
        // set both preview fields used in this component
        AddPreviewUrl = PrimaryPreviewUrl;
        PrimaryImage = PrimaryPreviewUrl;
        ShowMessage("Image loaded and will be saved with category.", isSuccess: true);
    }

    private void ClearPrimaryImage()
    {
        PrimaryImage = string.Empty;
        PrimaryPreviewUrl = string.Empty;
        AddImageFile = null;
        AddPreviewUrl = null;
    }
}
