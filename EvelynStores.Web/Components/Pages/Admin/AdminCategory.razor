@page "/admin/category-list"
@using EvelynStores.Core.DTOs
@using Microsoft.AspNetCore.Components.Forms
@using System.Text.Json
@using System.Net.Http.Headers
@using EvelynStores.Web.Components.Pages.Admin
@inject IEvelynPhilApiHttpClient ApiClient
@inject IJSRuntime JS

<PageTitle>AdminCategory</PageTitle>

<div class="content">
    <div class="page-header">
        <div class="add-item d-flex">
            <div class="page-title">
                <h4 class="fw-bold">Category</h4>
                <h6>Manage your categories</h6>
            </div>
        </div>
        <ul class="table-top-head">

            <li>
                <a data-bs-toggle="tooltip" data-bs-placement="top" title="Refresh" @onclick="LoadCategories"><i class="ti ti-refresh"></i></a>
            </li>
            <li>
                <a data-bs-toggle="tooltip" data-bs-placement="top" title="Collapse" id="collapse-header"><i class="ti ti-chevron-up"></i></a>
            </li>
        </ul>
        <div class="page-btn">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-category"><i class="ti ti-circle-plus me-1"></i>Add Category</button>
        </div>
    </div>

    <div class="mt-3">
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @successMessage
                <button type="button" class="btn-close" aria-label="Close" @onclick="() => ClearMessages()"></button>
            </div>
        }


        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" aria-label="Close" @onclick="() => ClearMessages()"></button>
            </div>
        }
    </div>


    <div class="card">
        <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
            <div class="search-set">
                <div class="search-input input-icon-start">
                    <span class="btn-searchset"><i class="ti ti-search fs-14 feather-search"></i></span>
                    <input class="form-control" placeholder="Search categories..." @bind="searchTerm" @bind:event="oninput" />
                </div>
            </div>
            <div class="d-flex table-dropdown my-xl-auto right-content align-items-center flex-wrap row-gap-3">
                <div class="dropdown me-2">
                    <button class="dropdown-toggle btn btn-white btn-md d-inline-flex align-items-center" type="button" data-bs-toggle="dropdown">
                        @statusFilter
                    </button>
                    <ul class="dropdown-menu  dropdown-menu-end p-3">
                        <li><button class="dropdown-item rounded-1" @onclick='() => SetStatusFilter("All")'>All</button></li>
                        <li><button class="dropdown-item rounded-1" @onclick='() => SetStatusFilter("Active")'>Active</button></li>
                        <li><button class="dropdown-item rounded-1" @onclick='() => SetStatusFilter("Inactive")'>Inactive</button></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table datatable">
                    <thead class="thead-light">
                        <tr>
                            
                            <th>Category</th>
                            <th>Category slug</th>
                            <th>Created On</th>
                            <th>Status</th>
                            <th class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in FilteredCategories)
                        {
                            <tr>
                                
                                <td>
                                    <div class="d-flex align-items-center">
                                        <a href="javascript:void(0);" class="avatar avatar-md me-2">
                                            <img src="@(string.IsNullOrEmpty(c.ImageUrl) ? "assets/img/products/stock-img-01.png" : c.ImageUrl)" alt="@c.Name">
                                        </a>
                                        <a href="javascript:void(0);">@c.Name</a>
                                    </div>
                                </td>
                                <td>@c.Slug</td>
                                <td>@c.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td><span class="badge @(c.IsActive ? "bg-success" : "bg-danger") fw-medium fs-10">@(c.IsActive ? "Active" : "Inactive")</span></td>
                                <td class="action-table-data">
                                    <div class="edit-delete-action">
                                        <button type="button" class="me-2 p-2 btn btn-link" title="Edit" @onclick="() => OpenEdit(c)">
                                            <i data-feather="edit" class="bi bi-folder2-open"></i>
                                        </button>
                                        <button data-bs-toggle="modal" data-bs-target="#delete-modal" type="button" class="p-2 btn btn-link text-danger" title="Delete" @onclick="() => OpenDelete(c.Id)">
                                            <i data-feather="trash-2" class="bi bi-trash3"></i>
                                        </button>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /product list -->
</div>

<!-- Add Category Modal -->
<div class="modal fade" id="add-category" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="page-title"><h4>Add Category</h4></div>
                <button type="button" class="close bg-danger text-white fs-16" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <EditForm Model="@AddModel" OnValidSubmit="HandleAddSubmit" OnInvalidSubmit="HandleAddInvalidSubmit" FormName="addCategoryForm">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    <ValidationSummary />
                    <div class="mb-3">
                        <label class="form-label">Category<span class="text-danger ms-1">*</span></label>
                        <InputText class="form-control" @bind-Value="AddModel.Name" @oninput="OnAddNameChanged" />
                        <ValidationMessage For="@(() => AddModel.Name)" />
                    </div>
                    <div class="mb-3" style="display:none">
                        <label class="form-label">Slug</label>
                        <InputText class="form-control" @bind-Value="AddModel.Slug" disabled />
                        <ValidationMessage For="@(() => AddModel.Slug)" />
                    </div>
                    <div class="mb-3">
                        <div class="text-editor add-list add">
                            <div class="col-lg-12">
                                <div class="add-choosen">
                                    <div class="mb-3">
                                        <div class="image-upload image-upload-two">
                                            <InputFile OnChange="OnInputFileChanged" />
                                            <div class="image-uploads">
                                                <i data-feather="plus-circle" class="plus-down-add me-0"></i>
                                                <h4>Add Images</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="phone-img">
                                        @if (!string.IsNullOrEmpty(AddPreviewUrl))
                                        {
                                            <img src="@AddPreviewUrl" alt="image">
                                        }
                                        else
                                        {
                                            <img src="assets/img/products/phone-add-2.png" alt="image">
                                        }
                                        <a href="javascript:void(0);"><i data-feather="x" class="x-square-add remove-product" @onclick="ClearPrimaryImage"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-0">
                        <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                            <span class="status-label">Status</span>
                            <InputCheckbox id="cat-isactive" class="check" @bind-Value="AddModel.IsActive" />
                            <label for="cat-isactive" class="checktoggle"></label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn me-2 btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
<!-- /Add Category Modal -->
