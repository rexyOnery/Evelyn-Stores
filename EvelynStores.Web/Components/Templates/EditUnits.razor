@using EvelynStores.Core.DTOs
@inject IJSRuntime JS

<!-- Edit Unit -->
<div class="modal fade" id="edit-units" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<div class="page-title">
					<h4>Edit Unit</h4>
				</div>
				<button type="button" class="close bg-danger text-white fs-16" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<EditForm Model="@EditModel" OnValidSubmit="HandleValidSubmit">
				<DataAnnotationsValidator />
				<div class="modal-body">
					<ValidationSummary />
					<div class="mb-3">
						<label class="form-label">Unit<span class="text-danger ms-1">*</span></label>
						<InputText class="form-control" @bind-Value="EditModel.Name" />
					</div>
					<div class="mb-3">
						<label class="form-label">Short Name<span class="text-danger ms-1">*</span></label>
						<InputText class="form-control" @bind-Value="EditModel.ShortName" />
					</div>
					<div class="mb-0">
						<div class="status-toggle modal-status d-flex justify-content-between align-items-center">
							<span class="status-label">Status</span>
							<InputCheckbox id="edit-unit-isactive" class="check" @bind-Value="EditModel.IsActive" />
							<label for="edit-unit-isactive" class="checktoggle"></label>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn me-2 btn-secondary" data-bs-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-primary">Save Changes</button>
				</div>
			</EditForm>
		</div>
	</div>
</div>
<!-- /Edit Unit -->

@code {
	[Parameter]
	public UnitDto? Unit { get; set; }

	[Parameter]
	public EventCallback<UnitDto> OnSave { get; set; }

	private UnitDto EditModel { get; set; } = new UnitDto();

	protected override void OnParametersSet()
	{
		if (Unit != null)
		{
			// copy values to avoid two-way binding the parent's instance
			EditModel = new UnitDto
			{
				Id = Unit.Id,
				Name = Unit.Name,
				ShortName = Unit.ShortName,
				IsActive = Unit.IsActive,
				NoOfProducts = Unit.NoOfProducts,
				CreatedAt = Unit.CreatedAt
			};
		}
	}

	private async Task HandleValidSubmit()
	{
		if (OnSave.HasDelegate)
		{
			await OnSave.InvokeAsync(EditModel);
		}

		try
		{
			await JS.InvokeVoidAsync("eval", "$('#edit-units').modal('hide');");
		}
		catch { }
	}
}
